<div class="flex items-center justify-between py-2">
  <%= form_with(model: task, class: "w-full") do |form| %>
    <div class="flex items-center">
      <%= form.check_box :completed,
                         data: {
                           id: task.id,
                           action: "tasks#toggle"
                         },
                         class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
      <div>
        <span class="text-lg"><%= task.description %></span>
        <span class="text-sm text-gray-500">- Due <%= task.due_date.strftime('%a %m-%d-%Y') %></span>
      </div>
    </div>

    <div class="flex items-center">
    <% end %>
      <%= link_to "Edit", edit_task_path(task),
                  class: "btn bg-gray-100"
      %>
      <%= button_to "Delete", task_path(task),
                    method: :delete, 
                    data: { action: "tasks#delete" },
                    class: "btn bg-red-100 ml-2" %>
    </div>
</div>